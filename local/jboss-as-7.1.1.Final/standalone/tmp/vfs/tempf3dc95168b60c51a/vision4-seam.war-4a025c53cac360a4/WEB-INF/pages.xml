<?xml version="1.0" encoding="UTF-8"?>
<pages xmlns="http://jboss.com/products/seam/pages"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://jboss.com/products/seam/pages http://jboss.com/products/seam/pages-2.2.xsd"
       login-view-id="/home.xhtml">

    <page view-id="/home.xhtml"/>

    <page view-id="/personEdit.xhtml">
        <param name="personId" value="#{personAction.personId}"/>
        <action execute="#{pageAccessCheck.requireView}"/>
        <action execute="#{personAction.init}"/>
    </page>

    <page view-id="/personList.xhtml">
        <action execute="#{pageAccessCheck.requireView}"/>
        <action execute="#{personListAction.init}"/>
    </page>

    <page view-id="/locationEdit.xhtml">
        <param name="locationId" value="#{locationAction.locationId}"/>
        <action execute="#{pageAccessCheck.requireView}"/>
        <action execute="#{locationAction.init}"/>
    </page>

    <page view-id="/locationList.xhtml">
        <action execute="#{pageAccessCheck.requireView}"/>
        <action execute="#{locationListAction.init}"/>
    </page>

    <page view-id="/about.xhtml"/>

    <page view-id="/accessDenied.xhtml"/>

    <exception class="com.vision.demo.auth.AuthorizationException">
        <redirect view-id="/accessDenied.xhtml">
            <message severity="ERROR">#{org.jboss.seam.handledException.message}</message>
        </redirect>
    </exception>

</pages>
